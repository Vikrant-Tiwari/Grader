<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard"
    android:background="@color/theme"
    android:id="@+id/drawer_l1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_logo" />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="true"
            android:text="Shreya"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_name"
            android:layout_centerHorizontal="true"
            android:text="9th 'A'"
            android:textColor="@color/button"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <include layout="@layout/toolbar_dashboard"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.02">

                <ImageView
                    android:id="@+id/logo_sc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_sc"
                    android:layout_centerInParent="true">

                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.01">

                <TextView
                    android:id="@+id/school_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/langar"
                    android:text="Kendriya Vidhalaya Balaghat"
                    android:textColor="@color/button"
                    android:textSize="@dimen/_15sdp">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.005"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03"
                android:gravity="center">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/notificatio_btn"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/langar"
                    android:text="Notification"
                    android:background="@drawable/btn2_background"
                    android:textAllCaps="false"
                    android:drawableEnd="@drawable/ic_action_notifications"
                    android:paddingRight="@dimen/_10sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/assignment_btn"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/langar"
                    android:text="Assignments"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn3_background"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_action_notifications"
                    android:paddingLeft="@dimen/_10sdp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03"
                android:gravity="center">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/syallabus_btn"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/langar"
                    android:text="Syallabus"
                    android:background="@drawable/btn2_background"
                    android:textAllCaps="false"
                    android:drawableEnd="@drawable/ic_action_notifications"
                    android:paddingRight="@dimen/_10sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/attendence_btn"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/langar"
                    android:text="Attendence"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn3_background"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_action_notifications"
                    android:paddingLeft="@dimen/_10sdp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/time_table_btn"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/langar"
                    android:text="Time Table"
                    android:background="@drawable/btn2_background"
                    android:textAllCaps="false"
                    android:drawableEnd="@drawable/ic_action_notifications"
                    android:paddingRight="@dimen/_10sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/profile_btn"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/langar"
                    android:text="Profile"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn3_background"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_action_notifications"
                    android:paddingLeft="@dimen/_10sdp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.03"
                android:gravity="center">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/exam_result_btn"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/langar"
                    android:text="Exam Result"
                    android:background="@drawable/btn2_background"
                    android:textAllCaps="false"
                    android:drawableEnd="@drawable/ic_action_notifications"
                    android:paddingRight="@dimen/_10sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/holiday_btn"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/langar"
                    android:text="Holidays"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn3_background"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_action_notifications"
                    android:paddingLeft="@dimen/_10sdp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.04"/>


        </LinearLayout>


    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navi_v1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/menu"
        android:layout_gravity="start"
        app:itemIconTint="@color/button">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>